<Window x:Class="MyBookStore.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid Background="#f7f7f7">
    <Border CornerRadius="10" Background="White" Padding="30" Width="260" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Book Store Login" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <Label Content="Username"/>
                <TextBox x:Name="UsernameBox" Margin="0,0,0,15" Height="28"/>
                <Label Content="Password"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" Height="28"/>
                <Button Content="Login" Click="Login_Click" Height="32" Background="#0078D7" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
